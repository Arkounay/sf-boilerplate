{% extends '@ArkounayQuickAdminGenerator/crud/view.html.twig' %}

{% block content_title %}
    {{ entity.firstname }} {{ entity.lastname}} - {{ entity.createdAt|date('d/m/Y') }}
{% endblock %}

{% block fields %}
    {{ _self.render_fields(entity) }}
{% endblock %}

{% macro render_fields(contact) %}
    {# contact \App\Entity\Contact #}
    <tr>
        <th>Date d'envoi</th>
        <td>Le {{ contact.createdAt|date('d/m/Y à H:i') }}</td>
    </tr>
    <tr>
        <th>Prénom</th>
        <td>{{ contact.firstname }}</td>
    </tr>
    <tr>
        <th>Nom</th>
        <td>{{ contact.lastname }}</td>
    </tr>
    <tr>
        <th>E-mail</th>
        <td><a href="mailto:{{ contact.email }}">{{ contact.email }}</a></td>
    </tr>
    <tr>
        <th>Message</th>
        <td>
            {{ contact.message|nl2br }}
        </td>
    </tr>
{% endmacro %}